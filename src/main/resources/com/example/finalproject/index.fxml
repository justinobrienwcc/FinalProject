<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.finalproject.IndexController" spacing="10">
    <TextField fx:id="firstNameField" promptText="Enter your first name"/>
    <Button text="Submit" onAction="#handleSubmit"/>
    <Text fx:id="responseText"/>
</VBox>


